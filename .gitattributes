# Ensure shell scripts always use LF line endings
*.sh text eol=lf

# Ensure JavaScript and HTML use LF
*.js text eol=lf
*.html text eol=lf
*.css text eol=lf
*.md text eol=lf

# Images should be treated as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
